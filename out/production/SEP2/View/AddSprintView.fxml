<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.AddSprintViewController">
    <children>

        <!-- Title -->
        <Label layoutX="328.0" layoutY="14.0" text="Add Sprint">
            <font><Font size="28" /></font>
        </Label>

        <Label layoutX="181.0" layoutY="90.0" text="Title:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <TextField fx:id="titleField" layoutX="269.0" layoutY="92.0" prefWidth="250" />

        <!-- Dates -->
        <Label layoutX="155.0" layoutY="210.0" text="Start Date:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <DatePicker fx:id="startDatePicker" layoutX="273.0" layoutY="212.0" prefHeight="26.0" prefWidth="250.0" />

        <Label layoutX="159.0" layoutY="300.0" text="End Date:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <DatePicker fx:id="endDatePicker" layoutX="277.0" layoutY="302.0" prefHeight="26.0" prefWidth="250.0" />

        <Button fx:id="saveButton" layoutX="248.0" layoutY="403.0" onAction="#save" prefWidth="100" text="Save" />
        <Button fx:id="cancelButton" layoutX="461.0" layoutY="403.0" onAction="#cancel" prefWidth="100" text="Cancel" />

    </children>
</AnchorPane>
