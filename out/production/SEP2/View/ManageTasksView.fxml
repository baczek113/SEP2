<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="601.0" prefWidth="724.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ManageTasksViewController">
    <children>


        <Label layoutX="328.0" layoutY="14.0" text="Tasks">
            <font><Font size="28" /></font>
        </Label>


        <TabPane fx:id="taskTabPane" layoutX="12.0" layoutY="57.0" prefHeight="500" prefWidth="700">

            <Tab text="To Do">
                <TableView fx:id="todoTable" prefHeight="486.0" prefWidth="719.0">
                    <columns>
                        <TableColumn fx:id="todoNameColumn" prefWidth="233.0" text="Name" />
                        <TableColumn fx:id="todoCreatedByColumn" prefWidth="233.0" text="Created By" />
                        <TableColumn fx:id="todoPriorityColumn" prefWidth="233.0" text="Priority" />   
                    </columns>
                </TableView>
            </Tab>


            <Tab text="Doing">
                <TableView fx:id="doingTable">
                    <columns>
                        <TableColumn fx:id="doingNameColumn" prefWidth="233.0" text="Name" />
                        <TableColumn fx:id="doingCreatedByColumn" prefWidth="233.0" text="Created By" />
                        <TableColumn fx:id="doingPriorityColumn" prefWidth="233.0" text="Priority" />
                    </columns>
                </TableView>
            </Tab>


            <Tab text="Done">
                <TableView fx:id="doneTable">
                    <columns>
                        <TableColumn fx:id="doneNameColumn" prefWidth="233.0" text="Name" />
                        <TableColumn fx:id="doneCreatedByColumn" prefWidth="233.0" text="Created By" />
                        <TableColumn fx:id="donePriorityColumn" prefWidth="233.0" text="Priority" />
                    </columns>
                </TableView>
            </Tab>


            <Tab text="Done and Checked">
                <TableView fx:id="checkedTable">
                    <columns>
                        <TableColumn fx:id="checkedNameColumn" prefWidth="233.0" text="Name" />
                        <TableColumn fx:id="checkedCreatedByColumn" prefWidth="233.0" text="Created By" />
                        <TableColumn fx:id="checkedPriorityColumn" prefWidth="233.0" text="Priority" />
                    </columns>
                </TableView>
            </Tab>
        </TabPane>
      <Button fx:id="takeTask" layoutX="116.0" layoutY="563.0" mnemonicParsing="false" onAction="#takeTask" text="Take task" />
      <Button fx:id="changeStatus" layoutX="533.0" layoutY="563.0" mnemonicParsing="false" onAction="#changeStatus" text="Change status" />
      <Button fx:id="unassign" layoutX="329.0" layoutY="563.0" mnemonicParsing="false" onAction="#unassign" text="Unassign" />
      <Button fx:id="goBack" layoutX="50.0" layoutY="21.0" mnemonicParsing="false" onAction="#goBack" prefHeight="8.0" prefWidth="34.0" text="←" />

    </children>
</AnchorPane>
