<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="330.0" prefWidth="378.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.AddSprintViewController">
    <children>

        <!-- Title -->
        <Label layoutX="123.0" layoutY="23.0" text="Add Sprint">
            <font><Font size="28" /></font>
        </Label>

        <Label layoutX="60.0" layoutY="89.0" text="Title:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <TextField fx:id="titleField" layoutX="127.0" layoutY="92.0" prefWidth="250" />

        <!-- Dates -->
        <Label layoutX="14.0" layoutY="142.0" text="Start Date:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <DatePicker fx:id="startDatePicker" layoutX="127.0" layoutY="144.0" prefHeight="26.0" prefWidth="250.0" />

        <Label layoutX="19.0" layoutY="200.0" text="End Date:">
            <font>
                <Font size="20.0" />
            </font></Label>
        <DatePicker fx:id="endDatePicker" layoutX="128.0" layoutY="202.0" prefHeight="26.0" prefWidth="250.0" />

        <Button fx:id="saveButton" layoutX="55.0" layoutY="256.0" onAction="#save" prefWidth="100" text="Save" />
        <Button fx:id="cancelButton" layoutX="247.0" layoutY="256.0" onAction="#cancel" prefWidth="100" text="Cancel" />

    </children>
</AnchorPane>
